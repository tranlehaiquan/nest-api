{
  "targetDefaults": {
    "build": {
      "input": ["src/**.ts", "src/**/*.ts"],
      "dependsOn": ["^build"],
      "cache": true
    },
    "lint": {
      "input": ["src/**.ts", "src/**/*.ts"],
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintignore",
        "{workspaceRoot}/eslint.config.js"
      ],
      "cache": true
    },
    "dev": {
      "dependsOn": ["^build"]
    },
    "test": {
      "inputs": ["default", "^default"],
      "cache": true
    },
    "@nx/vite:test": {
      "inputs": ["default", "^default"],
      "cache": true
    },
    "@nx/eslint:lint": {
      "input": ["src/**.ts", "src/**/*.ts"],
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintignore",
        "{workspaceRoot}/eslint.config.js"
      ],
      "cache": true
    }
  },
  "generators": {
    "@nx/react": {
      "application": {
        "style": "css",
        "linter": "eslint",
        "bundler": "vite",
        "babel": true
      },
      "library": {
        "style": "css",
        "linter": "eslint",
        "unitTestRunner": "vitest"
      },
      "component": {
        "style": "css"
      }
    }
  },
  "workspaceLayout": {
    "projectNameAndRootFormat": "derived",
    "appsDir": "apps",
    "libsDir": "packages"
  },
  "nxCloudAccessToken": "NzBmOTZjMGUtN2IzNS00NzljLWJjOWItYTllOGM2NmY4ZTMwfHJlYWQtd3JpdGU=",
  "useInferencePlugins": false,
  "defaultBase": "main"
}
